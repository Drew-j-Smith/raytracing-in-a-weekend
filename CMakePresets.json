{
    "version": 4,
    "configurePresets": [
        {
            "name": "msvc",
            "generator": "Visual Studio 17 2022",
            "binaryDir": "build/${presetName}",
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "/W4 /WX /permissive /analyze /EHsc"
            }
        },
        {
            "name": "clang",
            "generator": "Ninja",
            "binaryDir": "build/${presetName}",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang",
                "CMAKE_CXX_CLANG_TIDY": "clang-tidy;-header-filter=.;-checks=-*,readability-*",
                "CMAKE_CXX_FLAGS": "-O3 -Weverything -Weffc++ -Werror -Wno-c++98-compat -Wno-c++98-compat-pedantic -Wno-shadow-field-in-constructor"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "msvc-debug",
            "configurePreset": "msvc",
            "configuration": "Debug"
        },
        {
            "name": "msvc-release",
            "configurePreset": "msvc",
            "configuration": "Release"
        },
        {
            "name": "clang",
            "configurePreset": "clang"
        }
    ]
}