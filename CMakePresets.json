{
    "version": 4,
    "configurePresets": [
        {
            "name": "msvc",
            "generator": "Visual Studio 17 2022",
            "binaryDir": "build/${presetName}",
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "/W4 /WX /permissive /analyze /EHsc"
            }
        },
        {
            "name": "clang",
            "generator": "Ninja",
            "binaryDir": "build/${presetName}",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_CLANG_TIDY": "clang-tidy;-header-filter=.;-checks=-*,readability-*",
                "CMAKE_CXX_FLAGS": "-Wall -Wextra -Wshadow -Wno-shadow-field-in-constructor -Wnon-virtual-dtor -pedantic -Wold-style-cast -Wcast-align -Wunused -Woverloaded-virtual -Wpedantic -Wconversion -Wsign-conversion"
            }
        },
        {
            "name": "clang-release",
            "inherits": "clang",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_CLANG_TIDY": ""
            }
        }
    ],
    "buildPresets": [
        {
            "name": "msvc",
            "configurePreset": "msvc",
            "configuration": "Debug"
        },
        {
            "name": "msvc-release",
            "configurePreset": "msvc",
            "configuration": "Release"
        },
        {
            "name": "clang",
            "configurePreset": "clang"
        },
        {
            "name": "clang-release",
            "configurePreset": "clang-release"
        }
    ]
}